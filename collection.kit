  <title>Responsive Eye: Peter Burr</title>
  <link rel="stylesheet" href="styles/main.css?ckcachebust=ff1a9e0a0ff81ff03691b2e9a47972ff">
</head>
<body id="collection">
  <div class="container">
    <section class="content">
      <!-- @import "includes/header.html" -->
      <main class="main">
        <div class="main__col left">
          <nav class="collection__nav">
            <ul class="collection__list">
              <li class="collection__item">
                <a href="#" class="collection__link" data-id="black-square" data-micromodal-trigger="modal-1">Black Square</a>
              </li>
              <li class="collection__item">
                <a href="#" class="collection__link" data-id="gathering" data-micromodal-trigger="modal-1">A Gathering of Two</a>
              </li>
              <li class="collection__item">
                <a href="#" class="collection__link">Replicating Nine</a>
              </li>
              <li class="collection__item">
                <a href="#" class="collection__link">AR Kids</a>
              </li>
              <li class="collection__item">
                <a href="#" class="collection__link">People</a>
              </li>
              <li class="collection__item">
                <a href="#" class="collection__link">Grid For You</a>
              </li>
              <li class="collection__item">
                <a href="#" class="collection__link">Square For You</a>
              </li>
            </ul>
          </nav>
        </div>
        <div class="main__col right">
          <div class="square-grid">
            <div class="square-grid__square" role="button" data-id="black-square" data-micromodal-trigger="modal-1">
              <img src="assets/images/bs-thumb.gif" alt="Black Square" class="square-grid__image">
            </div>
            <div class="square-grid__square" role="button" data-id="gathering" data-micromodal-trigger="modal-1">
              <img src="assets/images/gathering-thumb.gif" alt="A Gathering of Two" class="square-grid__image">
            </div>
            <div class="square-grid__square" role="button">
              <img src="assets/images/arkids-thumb.gif" alt="AR Kids" class="square-grid__image">
            </div>
            <div class="square-grid__square" role="button">
              <img src="assets/images/replicating-thumb.gif" alt="Replicating Nine" class="square-grid__image">
            </div>
            <div class="square-grid__square" role="button">
              <img src="assets/images/bs-thumb.gif" alt="Black Square" class="square-grid__image">
            </div>
            <div class="square-grid__square" role="button">
              <img src="assets/images/gathering-thumb.gif" alt="A Gathering of Two" class="square-grid__image">
            </div>
          </div>
          <div class="square-grid__red-square">
          </div>
        </div>
      </main>
    </section>
    <section class="sidebar"></section>
  </div>
  <!-- [1] -->
<div id="modal-1" class="modal" aria-hidden="true">

  <!-- [2] -->
  <div tabindex="-1" class="modal__overlay" data-micromodal-close>

    <!-- [3] -->
    <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-1-title">
      <div class="modal__images">
        <img class="modal__image" src="assets/images/bs.jpg" alt="Black Square" data-id="black-square">
        <img class="modal__image" src="assets/images/gathering.jpg" alt="Black Square" data-id="gathering">
      </div>
      <div class="modal__content">
        <div class="modal__content-item" data-id="black-square">
          <p>BLACK SQUARE (Screenshot)</p>
          <p>single channel video (color sound) for screen or projector</p>
          <p>16:9 landscape orientation, dimensions variable</p>
          <p>06.30</p>
        </div>
        <div class="modal__content-item" data-id="gathering">
          <p>A Gathering of Two (Screenshot)</p>
          <p>single channel video (color sound) for screen or projector</p>
          <p>16:9 landscape orientation, dimensions variable</p>
          <p>06.30</p>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="scripts/lib/micromodal.min.js"></script>
<script src="scripts/main.js"></script>
